{
  "name": "testbook-e2e-tests",
  "version": "1.1.0",
  "description": "End-to-end tests for Testbook",
  "type": "module",
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:headed": "playwright test --project=chromium --headed",
    "test:debug": "playwright test --project=chromium --debug",
    "test:ui": "playwright test --project=chromium --ui",
    "test:a11y": "playwright test --project=chromium accessibility-axe.spec.js",
    "test:all-browsers": "playwright test",
    "install-browsers": "playwright install chromium",
    "lighthouse": "lhci autorun"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@axe-core/playwright": "^4.8.3",
    "@lhci/cli": "^0.15.1"
  }
}
