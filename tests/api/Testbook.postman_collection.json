									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.content).to.include('Updated');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"Updated post content at {{$timestamp}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/posts/{{postId}}",
							"host": ["{{baseUrl}}"],
							"path": ["posts", "{{postId}}"]
						}
					}
				},
