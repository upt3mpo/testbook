						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"Test post created at {{$timestamp}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/posts/",
							"host": ["{{baseUrl}}"],
							"path": ["posts", ""]
						}
					}
				},
				{
					"name": "Get Post",
					"event": [
						{
							"listen": "test",
							"script": {
