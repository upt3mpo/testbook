# Testbook Backend Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=sqlite:///./testbook.db
TEST_DATABASE_URL=sqlite:///./test_testbook.db

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use DEBUG for development, INFO for production

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm

# Development/Testing Mode
ENVIRONMENT=development
# Options: development, production, testing

# Test Configuration (for running tests)
TEST_LOG_LEVEL=WARNING
# Set to DEBUG to see detailed test output

# Testing Mode (for running security/API tests)
TESTING=false
# Set to 'true' when running security tests to increase rate limits
# This prevents test failures due to rate limiting
# Usage: TESTING=true pytest tests/security/ -v

