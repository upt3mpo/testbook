{
  "name": "testbook-frontend",
  "private": true,
  "version": "1.3.1",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "FORCE_COLOR=0 vitest --coverage",
    "test:contracts": "node scripts/fetch-schema.js && npm run test:run -- contract",
    "test:a11y": "FORCE_COLOR=0 npm test -- accessibility.test.jsx",
    "validate:schema": "node scripts/fetch-schema.js",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css}\""
  },
  "dependencies": {
    "axios": "^1.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "axe-core": "^4.8.3",
    "axe-playwright": "^2.0.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "@eslint/js": "^9.18.0",
    "globals": "^15.14.0",
    "jsdom": "^27.0.1",
    "msw": "^2.11.6",
    "prettier": "^3.1.1",
    "vite": "^6.0.7",
    "vitest": "^4.0.0",
    "vitest-axe": "^0.1.0"
  },
  "overrides": {
    "rimraf": "^4.4.1",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=24 <25"
  }
}
